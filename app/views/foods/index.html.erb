<div class="recipe_information">
  <p style="color: white"><%= notice %></p>
  <%= link_to "Add food", new_user_food_path %>
  <h1>Foods</h1>
</div>

<div id="foods">
  <table class ="recipe_table">
    <tr>
    <th>Name</th>
    <th>Measurement Unit</th>
    <th>Price</th>
    <th>Quantity</th>
    <th>Action</th>
  </tr>
  <% @foods.each do |food| %>
    <%if can? :read, food %>
      <%= render food %>
    <% end %>
  <%end%>
  </table>
</div>

