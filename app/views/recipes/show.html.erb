<p style="color: green"><%= notice %></p>

<div>
    <h1>Recipe <%=@recipe.name%></h1>
    <div>
      <p>Cooking time: <%=@recipe.cooking_time%></p>
      <p>Preperation time: <%=@recipe.preperation_time%></p>
      <p>Steps go here... </p>
    </div>
</div>

<div>
  <% @recipe_foods.each do |elem| %>
  <p>Food</p>
  
  <%= elem.food[:name] %>
  <p>Quantity</p>
  
  <%= elem[:quantity] %>
  
  <p>Price</p>
  <%= "$ #{elem.food[:price] * elem[:quantity]}" %>
  <p>Actions</p>
  <% end %>
</div>

<div>
 
  <button><%= link_to "Add ingredients", new_user_recipe_recipe_food_url(@user, @recipe) %></button>

  <%= button_to "Generate shooping list" %>
  
  <%= link_to "Back to recipes", user_recipes_url(current_user.id) %>

</div>
