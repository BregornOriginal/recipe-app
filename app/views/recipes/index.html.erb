<p style="color: green"><%= notice %></p>



<% if @recipes.empty? %>
  <div class='notifications'>
    <h4>This user hasn't create any recipes yet</h4>
  </div>
  <% else %>
  <section class='recipe_container'>
  <h1>Recipes</h1>
  <% @recipes.each do |recipe| %>
  <article id="recipes" class="recipe_card">
    <div class="name_container">
        <%= link_to recipe.name, user_recipe_url(@user.id, recipe.id), { class: 'recipe_name'} %>
        <%= button_to "REMOVE", user_recipe_url(@user, recipe.id), method: :delete %>
    </div>
    <div class="description_container">
      <p class="recipe_description"><%= recipe.description %></p>
    </div>
  </article>
    <% end %>
  <% end %>
</section>
<%= link_to "New recipe", new_user_recipe_url(@user.id) %>
