<div id="<%= dom_id recipe %>">

  <p>
    <strong>Name:</strong>
    <%= recipe.name %>
  </p>

  <p>
    <strong>Preperation time:</strong>
    <%= recipe.preperation_time %> minutes
  </p>

  <p>
    <strong>Cooking time:</strong>
    <%= recipe.cooking_time %> minutes
  </p>

  <p>
    <strong>Description:</strong>
    <%= recipe.description %>
  </p>

  <p>
    <strong>Public:</strong>
    <%= recipe.public %>
  </p>

</div>
