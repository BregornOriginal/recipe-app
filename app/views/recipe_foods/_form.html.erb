<section class='sign_up_container'>
  <%= form_with url: recipe_recipe_foods_path,
    method: :post, local: true, scope: :recipe_food do |form| %>
      <% if recipe_food.errors.any? %>
       <div style="color: white">
          <h2><%= pluralize(recipe_food.errors.count, "error") %> Please enter a correct value in the field:</h2>
            <ul>
            <% recipe_food.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
            </ul>
        </div>
      <% end %>

  <section class='sign_up_form'>

    <h1>New recipe food</h1>


      <div class="field">
        <%= form.label :food_id, style: "display: block" %>
        <%= form.select :food_id, current_user.foods.map { |food| ["#{food.name} (#{food.measurement_unit})", food.id ] }, {}%>
      </div>

      <div class="field">
        <%= form.label :quantity, style: "display: block" %>
        <%= form.number_field :quantity, min: 1, max: 20000 %>
        (1 to 20000)
    </div>
      <div>
        <%= form.submit "Add ingredient", class: 'button sign_up'%>
      </div>
    <% end %>
  </section>
</section>
